#include <stdio.h>

int main() {

    int pizzas, puffs, cool_drinks;

    int total_price;

    scanf("%d", &pizzas);

    scanf("%d", &puffs);

    scanf("%d", &cool_drinks);

    total_price = (pizzas * 100) + (puffs * 20) + (cool_drinks * 10);

    printf("Bill Details\n");

    printf("No of pizzas:%d\n", pizzas);

    printf("No of puffs:%d\n", puffs);

    printf("No of cooldrinks:%d\n", cool_drinks);

    printf("Total price=%d\n", total_price);

    printf("ENJOY THE SHOW!!!\n");

    return 0;

}
